<p>
  <b>Name:</b>
  <%=h @category.name %>
</p>

<p>
  <b>Description:</b>
  <%=h @category.description %>
</p>

<% @images.each do |image| %>
	<p>
		<b>Title:</b>
		<%= link_to image.title, [@category, image]%>
	</p><p>
		<%= image_tag image.url %>
	</p>
<% end %>


<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %> |
<%= link_to 'New Image', new_category_image_path(@category) %>