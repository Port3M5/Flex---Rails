<h1>New Image</h1>
<% categories = Category.find(:all, :order => :id)%>
<% form_for(@image) do |f| %>
	<%= f.error_messages %>
	
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :url %> <br />
		<%= f.text_field :url %>
	</p>
	<p>
		<%= f.label :category_id %><br />
		<%= f.collection_select :category_id, categories, :id, :name %>
	</p>
<% end %>

<% link_to 'Back', images_path %>