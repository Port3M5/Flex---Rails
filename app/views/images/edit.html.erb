<h1>Editing image</h1>

<% form_for [@category,@image] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_area :url %>
  </p>
	<p>
		<%= f.label :category_id %><br />
		<%= f.collection_select( :category_id, @categories, :id, :name, { :selected => @category.id }) %>
	</p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [@category, @image] %> |
<%= link_to 'Back', @category %>